<Window x:Class="PdfToolkitApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Merger" Height="300" Width="300"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="White"
        ResizeMode="NoResize">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- Custom Title Bar -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <DockPanel Grid.Row="0" Background="#444" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                <TextBlock Text="  PDF Merger" Foreground="White" VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Width="30" Height="30" Content="−" Click="Minimize_Click"/>
                    <Button Width="30" Height="30" Content="×" Click="Close_Click"/>
                </StackPanel>
            </DockPanel>

            <!-- Main Buttons -->
            <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
                <Button Content="Select PDF Files" Click="SelectFiles_Click" Margin="0 0 0 10"/>
                <Button Content="Merge and Save" Click="MergeFiles_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
